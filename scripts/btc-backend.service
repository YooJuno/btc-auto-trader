[Unit]
Description=BTC Auto Trader Backend
After=network.target

[Service]
Type=simple
User=juno
WorkingDirectory=/home/juno/Workspace/btc-auto-trader/apps/backend
EnvironmentFile=-/home/juno/Workspace/btc-auto-trader/.env
ExecStart=/usr/bin/java -jar /home/juno/Workspace/btc-auto-trader/apps/backend/build/libs/backend-0.0.1-SNAPSHOT.jar
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
